{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "sourceMap": true,
      "types": ["node", "@playwright/test"]
    },
    "include": ["src/**/*", "e2e/**/*"],
    "exclude": ["node_modules"]
  }